<p id="notice" class="alert alert-success"><%= notice %></p>

<h1>Courses</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title  </th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.try(:user).try(:name) %></td>
        <td><%= link_to 'Show', course ,class:"btn btn-success"%></td>
        <% if course.user == current_user %>
        <td><%= link_to 'Edit', edit_course_path(course) ,class:"btn btn-success"%></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-success"%></td>
       <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path ,class:"btn btn-success"%>

