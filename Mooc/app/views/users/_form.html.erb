<div class="panel panel-info">
<div class="panel-heading"></div>

<div class="panel-body">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name ,class: 'form-control'%>
  </div>
  <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true,class: 'form-control' %>
    </div>
  <div class="form-group">
    <%= f.label :date_of_birth %><br>
    <%= f.date_select :date_of_birth,class: 'form-control' %>
  </div>
  <div class="form-group">
      <%= f.label :gender %> <br>
      <%= f.radio_button :gender  , "male" ,:checked => true%>
      <%= f.label :gender  , "Male" %>
      <%= f.radio_button :gender , "female" %>
      <%= f.label :gender  , "Female" %>
    </div>

  <div class="form-group">
    <%= f.label :profile_picture %><br>
    <%= f.file_field :profile_picture %>
    <% if f.object.profile_picture? %>
      <%= image_tag f.object.profile_picture.thumb.url %>
      <%= f.label :remove_profile_picture %>
      <%= f.check_box :remove_profile_picture %> 
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit "User" ,class:"btn btn-info" %>
  </div>
<% end %>
  </div>
</div>