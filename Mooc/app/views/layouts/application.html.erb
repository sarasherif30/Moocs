    <ul class="nav navbar-nav">
     
      <li><%= link_to 'Courses' , courses_path %></li>
      <li><%= link_to 'Lectures' , lectures_path %></li>
      <% if current_user.try(:name) == "admin" %>
        <li><%= link_to "Admin", admin_root_path %></li>
       <% end %> 
      <% if current_user.present? %>
          <li><%= link_to "Log out", destroy_user_session_path, :method => "delete" %></li>

          <h5 style="color: #fff"> Welcome:<img src="<%= current_user.profile_picture %>" width="30" height="30"/> <%= current_user.try(:email)%></h5>
          <%= link_to "Edit Profile", edit_user_registration_path %>
        <% else %>       
          <li><%= link_to "Log in", new_user_session_path %></li>
          <li><%= link_to "Sign up", new_user_registration_path %></li>
        <% end %>
    </ul>
    
  </div>
</nav>
   <p class="notice alert alert-danger"><%= notice %></p>
   <p class="alert" class="alert alert-info"><%= alert %></p>
   
<div class="container"><%= yield %></div>

